<h1>Posts</h1>

<table border="1px solid black">
  <thead>
    <tr>
      <th>Title</th>

      <th>Body</th>

      <th>Status</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
     
      <tr>
        <td><%= post.title %></td>
        
        <td><%= post.title %></td>

        <td>
        <%= collection_select(:post, :status_id, Status.all, :id, :status) %>
        </td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

